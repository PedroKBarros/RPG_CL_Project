<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color"
    android:gravity="center_horizontal">

    <include layout="@layout/simple_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_background_color"
        tools:context=".MenuAcitivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/bt_continue_game"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:fontFamily="@font/red_rose"
                android:text="CONTINUAR\nJOGO"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bt_new_game"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button"
                android:fontFamily="@font/red_rose"
                android:text="NOVO\nJOGO"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_continue_game" />

            <Button
                android:id="@+id/bt_new_character"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button"
                android:fontFamily="@font/red_rose"
                android:text="NOVO\nPERSONAGEM"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/bt_new_game"
                app:layout_constraintTop_toBottomOf="@+id/bt_continue_game" />

            <Button
                android:id="@+id/bt_statistics"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button"
                android:fontFamily="@font/red_rose"
                android:text="ESTATÍSTICAS"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_new_game" />

            <Button
                android:id="@+id/bt_settings"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button"
                android:fontFamily="@font/red_rose"
                android:text="CONFIG"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/bt_statistics"
                app:layout_constraintTop_toBottomOf="@+id/bt_new_character" />

            <Button
                android:id="@+id/bt_about"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button"
                android:fontFamily="@font/red_rose"
                android:text="SOBRE"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bt_statistics" />

            <Button
                android:id="@+id/bt_quit"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button"
                android:fontFamily="@font/red_rose"
                android:text="SAIR"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/bt_about"
                app:layout_constraintTop_toBottomOf="@+id/bt_settings" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>