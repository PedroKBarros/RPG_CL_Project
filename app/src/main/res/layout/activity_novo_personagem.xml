<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_fundo_activitys">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/include"
            layout="@layout/cabecalho_completo_telas_fora_jogo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/red_rose"
            android:textSize="16sp"
            android:letterSpacing="0.2"
            android:textColor="@color/segunda_cor_texto"
            android:text="NOME:" />

        <EditText
            android:id="@+id/edt_nome_pers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/campo"
            android:inputType="text"
            android:fontFamily="@font/red_rose"
            android:textSize="15sp"
            android:letterSpacing="0.2"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/red_rose"
            android:textSize="16sp"
            android:letterSpacing="0.2"
            android:textColor="@color/segunda_cor_texto"
            android:text="CARACTERÍSTICAS:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/red_rose"
            android:textSize="15sp"
            android:letterSpacing="0.2"
            android:textColor="@color/segunda_cor_texto"
            android:text="SAÚDE:" />

       <ImageView
            android:id="@+id/img_valor_saude"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/caracteristica_valor10"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:id="@+id/spn_caract_saude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/campo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/red_rose"
            android:textSize="15sp"
            android:letterSpacing="0.2"
            android:textColor="@color/segunda_cor_texto"
            android:text="DETALHES:" />

        <EditText
            android:id="@+id/edt_detalhes_caract_saude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/campo_somente_leitura"
            android:inputType="text"
            android:fontFamily="@font/red_rose"
            android:textSize="15sp"
            android:letterSpacing="0.2" />





    </LinearLayout>
</ScrollView>